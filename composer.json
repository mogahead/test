{
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.cartalyst.com"
		}
	],
	"require": {
		"laravel/framework": "4.0.*",

		"cartalyst/data-grid": "1.0.*",
		"cartalyst/themes": "2.0.*",

		"platform/addons": "1.0.*",
		"platform/foundation": "1.0.*",
		"platform/operations": "1.0.*",
		"platform/routing": "1.0.*",

		"platform/users": "1.0.*",
		"platform/settings": "1.0.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-update-cmd": "php artisan optimize"
	},
	"minimum-stability": "dev"
}
