{
	"name": "cartalyst/platform",
	"description": "Platform",
	"keywords": ["platform", "ecommerce", "laravel", "bootstrap"],
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Cartalyst LLC",
			"email": "help@cartalyst.com"
		},
		{
			"name": "Ben Corlett",
			"email": "ben.corlett@cartalyst.com",
			"role": "Developer"
		},
		{
			"name": "Bruno Gaspar",
			"email": "bruno.gaspar@cartalyst.com",
			"role": "Developer"
		},
		{
			"name": "Dan Syme",
			"email": "dan.syme@cartalyst.com",
			"role": "Project Lead"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.cartalyst.com"
		}
	],
	"require": {
		"laravel/framework": "4.1.*",
		"doctrine/dbal": "2.5.*",

		"platform/foundation": "1.0.*",
		"platform/installer": "dev-develop",

		"platform/attributes": "1.0.*",
		"platform/content": "dev-develop",
		"platform/menus": "dev-develop",
		"platform/operations": "dev-develop",
		"platform/pages": "dev-develop",
		"platform/settings": "dev-develop",
		"platform/users": "dev-develop"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/overrides",
			"app/widgets",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize",
			"php artisan key:generate",
			"php artisan theme:publish --extensions",
			"php artisan asset:publish platform/installer"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"php artisan theme:publish --extensions",
			"php artisan asset:publish platform/installer"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
