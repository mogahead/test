{
	"repositories": [
        {
            "type": "composer",
            "url": "http://packages.cartalyst.com"
        }
    ],
	"require": {
		"laravel/framework": "4.0.*",

		"cartalyst/api": "1.0.*",
		"cartalyst/data-grid": "1.0.*",
		"cartalyst/themes": "1.0.*",

		"platform/addons": "1.0.*",
		"platform/foundation": "1.0.*",
		"platform/operations": "1.0.*",
		"platform/routing": "1.0.*",

		"platform/admin": "1.0.*",
		"platform/content": "1.0.*",
		"platform/users": "1.0.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/tests/TestCase.php"
		]
	},
	"minimum-stability": "dev"
}