{
	"repositories": [
        {
            "type": "composer",
            "url": "http://packages.cartalyst.com"
        }
    ],
	"require": {
		"illuminate/foundation": "1.2.*",

		"cartalyst/themes": "1.0.*",

		"platform/foundation": "1.0.*",

		"platform/content": "1.0.*",
		"platform/developers": "1.0.*",
		"platform/localization": "1.0.*",
		"platform/menus": "1.0.*",
		"platform/operations": "1.0.*",
		"platform/pages": "1.0.*",
		"platform/settings": "1.0.*",
		"platform/users": "1.0.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/tests/TestCase.php"
		]
	},
	"minimum-stability": "dev"
}