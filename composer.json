{
	"name": "cartalyst/platform",
	"description": "Platform",
	"keywords": ["platform", "ecommerce", "laravel", "bootstrap"],
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Cartalyst LLC",
			"email": "help@cartalyst.com"
		},
		{
			"name": "Ben Corlett",
			"email": "ben.corlett@cartalyst.com",
			"role": "Developer"
		},
		{
			"name": "Bruno Gaspar",
			"email": "bruno.gaspar@cartalyst.com",
			"role": "Developer"
		},
		{
			"name": "Dan Syme",
			"email": "dan.syme@cartalyst.com",
			"role": "Project Lead"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.cartalyst.com"
		}
	],
	"require": {
		"laravel/framework": "4.0.*",

		"platform/foundation": "1.0.*",
		"platform/operations": "1.0.*",
		"platform/routing": "1.0.*",

		"platform/content": "1.0.*",
		"platform/menus": "1.0.*",
		"platform/pages": "1.0.*",
		"platform/settings": "1.0.*",
		"platform/users": "1.0.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/overrides",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize",
			"php artisan theme:publish --extensions"
		],
		"post-update-cmd": [
			"php artisan optimize",
			"php artisan theme:publish --extensions"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
